<h3>更新用户</h3>
<%= simple_form_for(@member,url: admin_member_path(@member), method: :patch, :html => {novalidate: false, multipart: false}) do |f| %>
<% if @member.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@member.errors.count, "error") %>.
    </div>
    <ul>
    <% @member.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="form-group">
    <%= f.input :username, input_html:{class:'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.input :password, input_html:{class:'form-control'} %>
  </div>
  
  <div class="form-group">
    <%= f.input :email, input_html:{class:'form-control'} %>
  </div>
  
  <div class="form-group">
    <%= f.input :phone, input_html:{class:'form-control'} %>
  </div>
  
  <div class="form-group">
     <%=f.select :type, @types, :prompt=>"请选择" , input_html:{class:'form-control'}%> 
  </div>

  <div class="form-group">
     <%=f.select :status, @statuses, :prompt=>"请选择" , input_html:{class:'form-control'}%> 
  </div>

  <div class="form-group">
    <%= f.button :submit, class:'btn btn-default' %>
  </div>
<% end %>