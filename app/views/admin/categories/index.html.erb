<p id="notice"><%= notice %></p>

<h3>栏目信息</h3>
<%= link_to '新建栏目', new_admin_category_path %>
<table class='table'>
  <thead>
    <tr>
      <th width="20%">栏目名</th>
      <th width="60%">栏目描述</th>
      <th width="20%">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name%></td>
        <td><%= truncate(strip_tags(category.desc),:length=>100)%></td>
        <td><%= link_to '查看', admin_category_path(category) %>
        <%= link_to '编辑', edit_admin_category_path(category) %>
        <%= link_to '删除', admin_category_path(category), method: :delete, data: { confirm: '确定删除?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @categories %>
<br>
