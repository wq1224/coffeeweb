<h3>文章列表</h3>
<table class="table">
   <thead>
      <tr>
         <td>文章标题</td>
         <td>文章内容</td>
         <td>类型</td>
         <td>状态</td>
         <td>创建时间</td>
         <td>修改时间</td>
         <td>操作</td>
      </tr>
   </thead>
 <tbody>
<% @posts.each do |post| %>
   <tr>
      <td><%= truncate(post.title,:length=>50) %></td>
      <td><%= truncate(strip_tags(post.content), :length=>100) %></td>
      <td><%= post.type%></td>
      <td><%= post.status%></td>
      <td><%= post.created_at%></td>
      <td><%= post.updated_at%></td>
      <td><%= link_to '查看', admin_post_path(post) %>
      <%= link_to '编辑', edit_admin_post_path(post) %>
      <%= link_to '删除',  admin_post_path(post),method: :delete, data: { confirm: '确定删除?' }%></td>
    </tr>
<% end %>
 </tbody>
</table>

<%= link_to '新建文章', new_admin_post_path %>

