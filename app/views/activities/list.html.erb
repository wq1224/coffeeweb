<%= render "shared/header" %>
<!--- content ---->
		<!--- container ---->
		<div class="container">		
			<div class="tight row">
				<div class="col-md-9">
				<h2>最新活动</h2>
				<% @activities.each do |activity| %>
				  <div class="row post-list-item">
				  	    <div class="col-md-2">
						<%= image_tag(activity.image_url(:small),:class=>"post-list-img") if activity.image? %>
						</div>
						<div class="col-md-10">
						<%= link_to activity.title, post_path(activity),{:class => "post-list-title"} %><br>
						<%= truncate(strip_tags(activity.content), :length=>400) %>
						</div>	
				  </div>
                <% end %>
            </div>
            <div class="col-md-3">
	          <h4>最新动态</h4>
	          <% @latest_posts.each do |post| %>
	            <%= link_to post.title, post_path(post) %><br>
	          <% end %>
	       </div>
		   </div>
    </div> 

		<%= render "shared/footer" %>